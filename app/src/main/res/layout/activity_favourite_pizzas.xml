<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PizzaListActivity">


    <TextView
        android:id="@+id/tv_title_favourite_pizzas"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="50dp"
        android:textSize="23sp"
        android:background="@color/light_orange"
        android:text="@string/tv_favourite_pizzas_title"
        android:textStyle="bold"
        android:padding="@dimen/padding_container"/>

    <ListView
        android:id="@+id/list_view_pizzas"
        android:layout_below="@id/tv_title_favourite_pizzas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>